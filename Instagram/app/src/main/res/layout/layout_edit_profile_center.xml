<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="20dp"
            >

            <!-- circle picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/change_profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_profile"
                android:layout_centerHorizontal="true"
                android:text="Change Photo"
                android:textColor="@color/colorLightBlue"
                android:textSize="20sp" />


            <!-- layout center username -->
            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/change_profile_photo"
                android:layout_marginTop="80dp"
                android:background="@drawable/grey_border_bottom">


                <ImageView
                    android:id="@+id/ic_username"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_username" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_username"
                    android:text="Username" />
            </RelativeLayout>

            <!-- layout center display name -->

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:background="@drawable/grey_border_bottom"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_displayname"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_displayname" />

                <TextView
                    android:id="@+id/displayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_displayname"
                    android:text="Display name" />
            </RelativeLayout>

            <!-- layout center website -->
            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:background="@drawable/grey_border_bottom"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_website"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_website" />

                <TextView
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_website"
                    android:text="website" />
            </RelativeLayout>

            <!-- layout center description -->
            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative3"
                android:background="@drawable/grey_border_bottom"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_description"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_description" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_description"
                    android:text="Description" />
            </RelativeLayout>


            <!-- be blow layout center -->

            <TextView
                android:id="@+id/profile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative4"
                android:layout_marginBottom="5dp"
                android:background="@drawable/white_grey_bottom"
                android:gravity="center"
                android:text="PROFILE INFORMATION"
                android:textColor="@color/colorBlack"
                android:textSize="24sp" />

            <!-- layout email -->
            <RelativeLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_label"
                android:background="@drawable/grey_border_bottom"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/email_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_email"
                    android:text="email" />
            </RelativeLayout>

            <!-- be blow layout phone -->
            <RelativeLayout
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_email"
                android:background="@drawable/grey_border_bottom"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_phone" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ic_phone"
                    android:text="Phone number" />
            </RelativeLayout>





        </RelativeLayout>


    </ScrollView>


</merge>